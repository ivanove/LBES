<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"

            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/white"
                android:elevation="4dp"
                  >

            <ImageView

                android:layout_marginTop="10dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                  android:layout_marginBottom="10dp"
                android:src="@drawable/logo2"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/open_home"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="15dp"
                >
                <com.lbes.application.Widgets.ArrowImageView

                    android:layout_width="25dp"
                    android:layout_height="25dp"


                    android:layout_gravity="center"

                    android:tint="@color/bleuDark"
                    android:src="@drawable/home"

                    />
                <com.lbes.application.Widgets.AutoResizeTextView


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/bleuDark"
                    android:ellipsize="marquee"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="Home"
                    android:maxLines="2"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginTop="2dp" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="55dp"
                android:background="@color/bleuDark"/>
            <LinearLayout
                android:id="@+id/open_clothes"
                android:layout_width="match_parent"


                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="15dp"
                >
                <com.lbes.application.Widgets.ArrowImageView

                    android:layout_width="25dp"
                    android:layout_height="25dp"

                    android:layout_gravity="center"

                    android:tint="@color/bleuDark"
                    android:src="@drawable/clothes"

                    />
                <com.lbes.application.Widgets.AutoResizeTextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/bleuDark"
                    android:ellipsize="marquee"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="Vêtements"
                    android:maxLines="2"
                    />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
               android:layout_height="0.5dp"
                android:layout_marginLeft="55dp"
                android:background="@color/bleuDark"/>

            <LinearLayout
                android:id="@+id/open_map"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="15dp"
                >
                <com.lbes.application.Widgets.ArrowImageView
                    android:id="@+id/map"

                   android:layout_width="25dp"
                   android:layout_height="25dp"

                    android:layout_gravity="center"

                    android:tint="@color/bleuDark"
                    android:src="@drawable/map"

                    />
                <com.lbes.application.Widgets.AutoResizeTextView
                    android:id="@+id/swipe_title"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/bleuDark"
                    android:ellipsize="marquee"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="Carte"
                    android:maxLines="2"
                    android:textSize="18sp" />


            </LinearLayout>

             <View
                 android:layout_width="match_parent"
                android:layout_height="0.5dp"
                  android:layout_marginLeft="55dp"
                 android:background="@color/bleuDark"/>
            <LinearLayout
                android:id="@+id/open_favoris"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="15dp"

                >
                <com.lbes.application.Widgets.ArrowImageView

                   android:layout_width="25dp"
                   android:layout_height="25dp"

                    android:layout_gravity="center"

                    android:tint="@color/bleuDark"
                    android:src="@drawable/favoris"

                    />
                <com.lbes.application.Widgets.AutoResizeTextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/bleuDark"
                    android:ellipsize="marquee"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="Favoris"
                    android:maxLines="2"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginTop="2dp"/>


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="55dp"
                android:background="@color/bleuDark"/>

            <LinearLayout
                android:id="@+id/open_settings"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="15dp"

                >
                <com.lbes.application.Widgets.ArrowImageView

                   android:layout_width="25dp"
                   android:layout_height="25dp"

                    android:layout_gravity="center"

                    android:tint="@color/bleuDark"
                    android:src="@drawable/sett"

                    />
                <com.lbes.application.Widgets.AutoResizeTextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/bleuDark"
                    android:ellipsize="marquee"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="Paramètres"
                    android:maxLines="2"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginTop="2dp"/>


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                 android:layout_marginLeft="55dp"
                android:background="@color/bleuDark"/>


        </LinearLayout>




    </ScrollView>





</RelativeLayout>