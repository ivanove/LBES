<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RLMainActivity"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >


    <RelativeLayout
        android:id="@+id/swipe_container"
        android:layout_width="match_parent"
        android:layout_height="350dp"
          >

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/sub_swipe_title_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"

        android:gravity="bottom|center"

        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/open_map"
                android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:background="@color/bleuDark"
                android:gravity="center"
                android:elevation="4dp">
                <com.lbes.application.Widgets.ArrowImageView
                    android:id="@+id/title_arrow"

                    android:layout_width="30dp"
                    android:layout_height="30dp"

                    android:layout_gravity="center"

                    android:tint="@color/white"
                    android:src="@drawable/map"

                    />
                <com.lbes.application.Widgets.AutoResizeTextView
                    android:id="@+id/swipe_title"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:ellipsize="marquee"
                    android:textStyle="bold"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="Carte"
                    android:maxLines="2"
                    android:textSize="18sp" />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/open_settings"
                android:layout_marginTop="4dp"
                android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:background="@color/white"
                android:gravity="center"
                android:elevation="4dp">
                <com.lbes.application.Widgets.ArrowImageView

                    android:layout_width="30dp"
                    android:layout_height="30dp"

                    android:layout_gravity="center"

                    android:tint="@color/bleuDark"
                    android:src="@drawable/sett"

                    />
                <com.lbes.application.Widgets.AutoResizeTextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/bleuDark"
                    android:ellipsize="marquee"

                    android:gravity="center"
                    android:text="Paramètres"
                    android:maxLines="2"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginTop="2dp"/>


            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/open_favoris"
                android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"

                android:background="@color/white"
                android:gravity="center"
                android:elevation="4dp">
                <com.lbes.application.Widgets.ArrowImageView

                    android:layout_width="30dp"
                    android:layout_height="30dp"

                    android:layout_gravity="center"

                    android:tint="@color/bleuDark"
                    android:src="@drawable/favoris"

                    />
                <com.lbes.application.Widgets.AutoResizeTextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/bleuDark"
                    android:ellipsize="marquee"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="Favoris"
                    android:maxLines="2"
                    />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/open_clothes"
                android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_margin="2dp"
                android:layout_height="80dp"

                android:background="@color/bleuDark"
                android:gravity="center"
                android:elevation="4dp">
                <com.lbes.application.Widgets.ArrowImageView


                    android:layout_width="30dp"
                    android:layout_height="30dp"

                    android:layout_gravity="center"

        android:tint="@color/white"
                    android:src="@drawable/clothes"

                    />
                <com.lbes.application.Widgets.AutoResizeTextView


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:ellipsize="marquee"

                    android:gravity="center"
                    android:text="Vêtements"
                    android:maxLines="2"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginTop="2dp" />


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>